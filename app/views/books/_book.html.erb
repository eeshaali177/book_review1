<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= book.description %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @book.category.name %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>
  <%= image_tag @book.image.variant(resize: "100x100") %>

</div>
